{
  "manifest_version": 2,
  "name": "Sort twitter/X comments by likes",
  "version": "1.0",
  "description": "Sorts twitter/X comments by likes.",
  "icons": {
    "48": "icon.png"
  },
  "permissions": ["activeTab", "https://x.com/*"],
  "content_scripts": [
    {
      "matches": ["https://x.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
    "default_icon": "icon.png"
  }
}
